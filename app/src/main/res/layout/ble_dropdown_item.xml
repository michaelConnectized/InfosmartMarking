    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
            <HorizontalScrollView
                android:id="@+id/scv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/chk_check">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/infoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_uuid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textColor="@android:color/black"
                            android:text="UUID"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="NAME"/>
                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="ADDRESS"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="Major/Minor: "/>
                            <TextView
                                android:id="@+id/tv_major"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="major"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="."/>
                            <TextView
                                android:id="@+id/tv_minor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="minor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="RSSI: "/>
                            <TextView
                                android:id="@+id/tv_rssi"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="RSSI" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="TX POWER: "/>
                            <TextView
                                android:id="@+id/tv_txpwr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="POWER" />
                            <TextView
                                android:id="@+id/tv_newTxpwr"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textColor="#FF0000"
                                android:text="" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/black"
                                android:text="Battery level: "/>
                            <TextView
                                android:id="@+id/tv_pwr"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:text="POWER" />
                        </LinearLayout>
                        <Button
                            android:id="@+id/btn_edit_txPwr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit txPower"
                            android:layout_centerVertical="true"/>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        <CheckBox
            android:id="@+id/chk_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#50000000"
            android:layout_alignBottom="@+id/scv"/>
    </RelativeLayout>
